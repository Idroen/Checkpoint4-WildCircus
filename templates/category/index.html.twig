{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom de la catégorie</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}"><i class="far fa-eye"
                                                                                  style="color: deeppink"></i></a>
                    {%  if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="far fa-edit"
                                                                                  style="color: deeppink"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {%  if is_granted('ROLE_ADMIN') %}
         <a class="button2 b-red little rot-135" href="{{ path('category_new') }}">Ajouter catégory</a>
    {% endif %}
{% endblock %}
