{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom de la catégory</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="button2 b-red little rot-135" href="{{ path('category_index') }}">retour</a>
    <br>
    {%  if is_granted('ROLE_ADMIN') %}
    <a class="button2 b-red little rot-135" href="{{ path('category_edit', {'id': category.id}) }}">modifier</a>
    {% endif %}
    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
