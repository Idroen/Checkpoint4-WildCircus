{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <h1>Performance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ performance.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ performance.synopsis }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img class="perf-pic" src="{{ performance.photo }}" alt="performance's picture"></td>
            </tr>
        </tbody>
    </table>
    <strong>Artiste(s) :</strong>
    <ul>
    {% for artist in performance.artists %}
        <li><a href="{{ path('artist_show', {'id': artist.id}) }}">{{ artist.nickname }}</a></li>
    {% else %}
        <li>Aucun artiste trouv√©</li>
     {% endfor %}
    </ul>

    <a class="button2 b-red little rot-135" href="{{ path('performance_index') }}">retour</a>
    <br>
    <a class="button2 b-red little rot-135" href="{{ path('performance_edit', {'id': performance.id}) }}">modifier</a>

    {{ include('performance/_delete_form.html.twig') }}
{% endblock %}
