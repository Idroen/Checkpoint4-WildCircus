{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Lieu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ location.adress }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ location.date ? location.date|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="button2 b-red little rot-135" href="{{ path('location_index') }}">retour</a>
    <br>
    {%  if is_granted('ROLE_ADMIN') %}
        <a class="button2 b-red little rot-135" href="{{ path('location_edit', {'id': location.id}) }}">modifier</a>
    {% endif %}

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
